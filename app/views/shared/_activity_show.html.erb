<% if check_authorized(@activity, current_user) %>
  <div class="pending-participants">
      <div class="user-status">
      <div class="info"> <%= link_to joined_activity.user.username, user_path(joined_activity.user) %> </div>
      <div class="info"> <%= joined_activity.status %> </div>
      </div>
      <div class="form">
        <%= simple_form_for [@activity, joined_activity], html: { class: 'form-inline' } do |f| %>
        <%= f.input :status, label: false, collection: JoinedActivity::STATUS %>
        <%= f.submit "Update status"%>
        <% end %>
      </div>
  </div>
<% end %>
